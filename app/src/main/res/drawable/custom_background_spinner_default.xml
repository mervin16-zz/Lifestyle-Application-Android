<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    
                    <padding
                            android:left="@dimen/Padding_Spinner_Default"
                            android:top="@dimen/Padding_Spinner_Default"
                            android:right="@dimen/Padding_Spinner_Default"
                            android:bottom="@dimen/Padding_Spinner_Default" />

                    <stroke android:width="@dimen/Stroke_Spinner_Thin" android:color="@color/grey_300" />
                    
                    <solid android:color="@color/white_000" />
                    
                    <corners android:radius="@dimen/Rounded_Views_Small" />
                    
                </shape>
            </item>
            
            <item>
                <bitmap android:gravity="center|right" android:src="@android:drawable/arrow_down_float" android:tint="@color/colorAccent"/>
            </item>
        
        </layer-list>
    </item>
</selector>