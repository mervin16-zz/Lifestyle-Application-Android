<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable name="ViewModel" type="com.th3pl4gu3.lifestyle.ui.add_item.AddItemViewModel"/>
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">
        
        <TextView
                android:id="@id/TextView_fromAddItemActivity_SubtitleDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/TextView_fromAddItemActivity_Subtitle_Details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Centered_Subtitle_Overline_Default"/>
        
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/EditText_fromAddItemActivity_Hint_Title"
                app:layout_constraintTop_toBottomOf="@+id/TextView_fromAddItemActivity_SubtitleDetails"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextBox_Outline_WithCounter">
            
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@id/EditText_fromAddItemActivity_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"/>
        
        </com.google.android.material.textfield.TextInputLayout>
        
        <Spinner
                android:id="@id/Spinner_fromAddItemActivity_Category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/custom_background_spinner_default"
                app:layout_constraintEnd_toStartOf="@id/ImageButton_fromAddItemActivity_Icon_AddCategory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textInputLayout"/>
        
        <ImageButton
                android:id="@id/ImageButton_fromAddItemActivity_Icon_AddCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_dark"
                android:tint="@color/white_000"
                android:backgroundTint="@color/colorAccent"
                android:tooltipText="Add Category"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/Spinner_fromAddItemActivity_Category"
                app:layout_constraintBottom_toBottomOf="@id/Spinner_fromAddItemActivity_Category"
                app:layout_constraintTop_toBottomOf="@id/textInputLayout"/>
        
        <!-- Layout should appear for To Buy ONLY -->
        <com.google.android.material.textfield.TextInputLayout
                android:id="@id/TextInputLayout_fromAddItemActivity_Details_Quantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="@dimen/Margin_BetweenFormFields_Default"
                android:layout_marginTop="@dimen/Margin_BetweenFormFields_Default"
                android:hint="@string/EditText_fromAddItemActivity_Hint_Qty"
                android:visibility="@{ViewModel.toBuySectionVisibility}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Spinner_fromAddItemActivity_Category"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/TextInputLayout_fromAddItemActivity_Details_Price"
                tools:visibility="visible"
                style="@style/TextBox_Outline_Default">
            
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@id/EditText_fromAddItemActivity_Quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>
        
        <com.google.android.material.textfield.TextInputLayout
                android:id="@id/TextInputLayout_fromAddItemActivity_Details_Price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="@dimen/Margin_BetweenFormFields_Default"
                android:layout_marginStart="8dp"
                android:hint="@string/EditText_fromAddItemActivity_Hint_Price"
                android:visibility="@{ViewModel.toBuySectionVisibility}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/TextInputLayout_fromAddItemActivity_Details_Quantity"
                app:layout_constraintTop_toBottomOf="@+id/Spinner_fromAddItemActivity_Category"
                tools:visibility="visible"
                style="@style/TextBox_Outline_Default">
            
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@id/EditText_fromAddItemActivity_Price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>
    
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>