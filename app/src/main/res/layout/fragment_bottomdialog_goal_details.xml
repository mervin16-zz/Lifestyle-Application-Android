<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">
    
    <data>
        <variable
                name="MyGoal"
                type="com.th3pl4gu3.lifestyle.core.lifestyle.Goal"/>
    
        <variable
                name="LifestyleViewModel"
                type="com.th3pl4gu3.lifestyle.ui.home.LifestyleOpsViewModel"/>
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/Padding_Switch_Default">
    
        <TextView
                android:id="@id/Placeholder_forLifestyleItem_Value_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{MyGoal.title}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Text_Title_BottomFragmentDialog"
                tools:text="The Title"/>
    
        <TextView
                android:id="@id/Placeholder_forLifestyleItem_Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Placeholder_forLifestyleItem_Details_Category"
                app:layout_constraintStart_toStartOf="@+id/Placeholder_forLifestyleItem_Value_Title"
                style="@style/typography_body_2"
                app:layout_constraintTop_toBottomOf="@+id/Placeholder_forLifestyleItem_Value_Title"
                android:layout_marginTop="32dp"/>
    
    
        <TextView
                android:id="@id/Placeholder_forLifestyleItem_Value_Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lifestyleItemCategory="@{MyGoal}"
                app:layout_constraintTop_toTopOf="@+id/Placeholder_forLifestyleItem_Category"
                app:layout_constraintBottom_toBottomOf="@+id/Placeholder_forLifestyleItem_Category"
                tools:text="The Category"
                style="@style/typography_body_1"
                app:layout_constraintStart_toEndOf="@+id/Placeholder_forLifestyleItem_Category"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.3"/>
    
        <TextView
                android:id="@id/Placeholder_forLifestyleItem_DateAdded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Placeholder_forLifestyleItem_Details_DateAdded"
                app:layout_constraintStart_toStartOf="@+id/Placeholder_forLifestyleItem_Category"
                app:layout_constraintTop_toBottomOf="@+id/Placeholder_forLifestyleItem_Category"
                style="@style/typography_body_2"/>
    
        <TextView
                android:id="@id/Placeholder_forLifestyleItem_Value_DateAdded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lifestyleItemDateAdded="@{MyGoal}"
                app:layout_constraintStart_toStartOf="@+id/Placeholder_forLifestyleItem_Value_Category"
                app:layout_constraintTop_toTopOf="@+id/Placeholder_forLifestyleItem_DateAdded"
                app:layout_constraintBottom_toBottomOf="@+id/Placeholder_forLifestyleItem_DateAdded"
                tools:text="Added on 16 March 1996"/>
    
        <TextView
                android:id="@+id/Placeholder_forLifestyleItem_DaysActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Placeholder_forLifestyleItem_Details_DaysActive"
                app:layout_constraintStart_toStartOf="@+id/Placeholder_forLifestyleItem_DateAdded"
                app:layout_constraintTop_toBottomOf="@+id/Placeholder_forLifestyleItem_DateAdded"
                app:layout_constraintBottom_toTopOf="@+id/IncludeLayout_forLifestyleItem_ActionButtons"
                app:layout_constraintVertical_chainStyle="spread"
                style="@style/typography_body_2"/>
    
        <TextView
                android:id="@+id/Placeholder_forLifestyleItem_Value_DaysActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/Placeholder_forLifestyleItem_Value_DateAdded"
                app:layout_constraintTop_toTopOf="@+id/Placeholder_forLifestyleItem_DaysActive"
                app:layout_constraintBottom_toBottomOf="@+id/Placeholder_forLifestyleItem_DaysActive"
                app:lifestyleItemDaysOld="@{MyGoal}"
                tools:text="30 Days Ago"
                style="@style/typography_caption"/>
    
        <include
                android:id="@id/IncludeLayout_forLifestyleItem_ActionButtons"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@+id/Placeholder_forLifestyleItem_DaysActive"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                layout="@layout/include_forlifestyleitems_buttons_actions" />
    
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>