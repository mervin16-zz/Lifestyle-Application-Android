<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">
    
    <data>
        <variable name="MyToDo" type="com.th3pl4gu3.lifestyle.core.lifestyle.ToDo"/>
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/Margin_Views_Default">
        
        <TextView
                android:id="@id/Placeholder_forLifestyleItem_Value_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/Margin_List_RecyclerView_Default_StartOfView"
                android:text="@{MyToDo.title}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/typography_h5"
                tools:text="The Title"/>
    
        <TextView
                android:id="@id/Placeholder_forLifestyleItem_Priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:text="@string/Placeholder_forLifestyleItem_Details_Priority"
                app:layout_constraintTop_toBottomOf="@+id/Placeholder_forLifestyleItem_Value_Title"
                app:layout_constraintStart_toStartOf="@+id/Placeholder_forLifestyleItem_Value_Title"
                style="@style/typography_body_2"/>
    
        <ImageView
                android:id="@id/Placeholder_forLifestyleItem_Value_Priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:contentDescription="@string/ContentDescription_fromLifestyleItemList_Icon_Priority"
                app:lifestyleItemPriority="@{MyToDo}"
                app:layout_constraintStart_toEndOf="@+id/Placeholder_forLifestyleItem_Priority"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintTop_toTopOf="@+id/Placeholder_forLifestyleItem_Priority"
                app:layout_constraintBottom_toBottomOf="@+id/Placeholder_forLifestyleItem_Priority"
                app:srcCompat="@drawable/ic_priority_4"
                tools:srcCompat="@drawable/ic_priority_4"/>
    
        <TextView
                android:id="@id/Placeholder_forLifestyleItem_Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Placeholder_forLifestyleItem_Details_Category"
                app:layout_constraintTop_toBottomOf="@+id/Placeholder_forLifestyleItem_Priority"
                app:layout_constraintStart_toStartOf="@+id/Placeholder_forLifestyleItem_Priority"
                style="@style/typography_body_2"/>
    
    
        <TextView
                android:id="@id/Placeholder_forLifestyleItem_Value_Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lifestyleItemCategory="@{MyToDo}"
                app:layout_constraintStart_toStartOf="@+id/Placeholder_forLifestyleItem_Value_Priority"
                app:layout_constraintTop_toTopOf="@+id/Placeholder_forLifestyleItem_Category"
                app:layout_constraintBottom_toBottomOf="@+id/Placeholder_forLifestyleItem_Category"
                tools:text="The Category"
                style="@style/typography_body_1"/>
        
        <TextView
                android:id="@id/Placeholder_forLifestyleItem_DateAdded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Placeholder_forLifestyleItem_Details_DateAdded"
                app:layout_constraintStart_toStartOf="@+id/Placeholder_forLifestyleItem_Category"
                app:layout_constraintTop_toBottomOf="@+id/Placeholder_forLifestyleItem_Category"
                style="@style/typography_body_2"/>
    
        <TextView
                android:id="@id/Placeholder_forLifestyleItem_Value_DateAdded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lifestyleItemDateAdded="@{MyToDo}"
                app:layout_constraintStart_toStartOf="@+id/Placeholder_forLifestyleItem_Value_Category"
                app:layout_constraintTop_toTopOf="@+id/Placeholder_forLifestyleItem_DateAdded"
                app:layout_constraintBottom_toBottomOf="@+id/Placeholder_forLifestyleItem_DateAdded"
                tools:text="Added on 16 March 1996"/>
            
        <TextView
                android:id="@+id/Placeholder_forLifestyleItem_DaysActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Placeholder_forLifestyleItem_Details_DaysActive"
                app:layout_constraintStart_toStartOf="@+id/Placeholder_forLifestyleItem_DateAdded"
                app:layout_constraintTop_toBottomOf="@+id/Placeholder_forLifestyleItem_DateAdded"
                app:layout_constraintBottom_toTopOf="@+id/RelativeLayout_forLifestyleItem_ActionButtons"
                app:layout_constraintVertical_chainStyle="spread"
                style="@style/typography_body_2"/>
    
        <TextView
                android:id="@+id/Placeholder_forLifestyleItem_Value_DaysActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/Placeholder_forLifestyleItem_Value_DateAdded"
                app:layout_constraintTop_toTopOf="@+id/Placeholder_forLifestyleItem_DaysActive"
                app:layout_constraintBottom_toBottomOf="@+id/Placeholder_forLifestyleItem_DaysActive"
                app:lifestyleItemDaysOld="@{MyToDo}"
                tools:text="30 Days Ago"
                style="@style/typography_caption"/>
        
        <RelativeLayout
                android:id="@id/RelativeLayout_forLifestyleItem_ActionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@+id/Placeholder_forLifestyleItem_DaysActive"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            
            <include
                    android:id="@id/IncludeLayout_forLifestyleItem_ActionButtons"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    layout="@layout/include_buttons_lifestyle_items_action" />
        
        </RelativeLayout>
    
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>