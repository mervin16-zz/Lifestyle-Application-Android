<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        
        <variable
                name="toBuyViewModel"
                type="com.th3pl4gu3.lifestyle.ui.home.section_tobuy.ToBuyViewModel" />
        
        <variable
                name="toggleButtonState"
                type="com.th3pl4gu3.lifestyle.ui.enums.ToggleButtonStates" />
    </data>
    
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        
        <!-- Two State Button View -->
        
        <LinearLayout
                android:id="@id/LinearLayout_fromHomeActivity_ToggleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center">
            
            <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@id/ToggleButtonGroup_forLifestyleList_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:checkedButton="@+id/Button_forLifestyleList_ToggleButton_Active">
                
                <com.google.android.material.button.MaterialButton
                        android:id="@id/Button_forLifestyleList_ToggleButton_Active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{toBuyViewModel.currentActiveButtonText}"
                        android:textAppearance="@style/typography_button"
                        android:onClick="@{() -> toBuyViewModel.updateList(toggleButtonState.BUTTON_ACTIVE)}"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                
                <com.google.android.material.button.MaterialButton
                        android:id="@id/Button_forLifestyleList_ToggleButton_Completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{toBuyViewModel.currentCompletedButtonText}"
                        android:onClick="@{() -> toBuyViewModel.updateList(toggleButtonState.BUTTON_COMPLETE)}"
                        android:textAppearance="@style/typography_button"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </LinearLayout>
    
        <androidx.recyclerview.widget.RecyclerView
                android:id="@id/RecyclerView_fromFragmentToBuy_Main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="?attr/actionBarSize"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/EmptyView_forRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="?attr/actionBarSize"
                android:visibility="visible"
                tools:visibility="visible">
        
            <ImageView
                    android:id="@id/ImageView_fromFragmentToBuy_EmptyView"
                    android:contentDescription="@string/ContentDescription_fromToBuyFragment_EmptyView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/TextView_fromFragmentToBuy_EmptyView"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:srcCompat="@drawable/ic_sadface_accent_light"
                    tools:srcCompat="@drawable/ic_sadface_accent_light"
                    style="@style/EmptyView_Image_LifestyleList"/>
        
            <TextView
                    android:id="@id/TextView_fromFragmentToBuy_EmptyView"
                    android:text="@string/TextView_fromToBuyFragment_Message_EmptyList_Active"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ImageView_fromFragmentToBuy_EmptyView"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="@string/TextView_fromToBuyFragment_Message_EmptyList_Active"
                    style="@style/EmptyView_Text_LifestyleList" />
    
        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </LinearLayout>

</layout>