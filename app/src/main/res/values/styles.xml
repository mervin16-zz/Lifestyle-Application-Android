<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- App Theme Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- App Status Bar -->
        <item name="android:windowLightStatusBar">@bool/Windows_StatusBar_Light</item>
        
        <item name="android:windowIsTranslucent">@bool/Windows_IsTranslucent</item>
    </style>
    
    <!-- Bottom Sheet Dialog -->
    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/custom_rounded_dialog</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">@bool/Windows_IsFloating</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />
    
    <!-- Typography -->
    <style name="typography_h6">
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    
    <style name="typography_subtitle_2">
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    
    <style name="typography_overline">
        <item name="android:fontFamily">@font/work_sans_semi_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="typography_button">
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
</resources>
