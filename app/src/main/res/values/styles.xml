<resources>
    
    <!--
        The Application's General Themes
    -->
    
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <!-- App Theme Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- App Status Bar -->
        <item name="android:windowLightStatusBar">@bool/Windows_StatusBar_Light</item>
        
        <item name="android:windowIsTranslucent">@bool/Windows_IsTranslucent</item>
    
        <!-- Typography -->
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    
    
    
    <!--
        Typography & Styles
    -->
    
    <!-- The Application's Typography  -->
    <style name="typography_h1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    
    <style name="typography_h2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="typography_h3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="typography_h4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    
    <style name="typography_h5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="typography_h6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>
    
    <style name="typography_subtitle_1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="typography_subtitle_2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    
    <style name="typography_body_1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    
    <style name="typography_body_2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    
    <style name="typography_button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="typography_caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>
    
    <style name="typography_overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    
    <!-- Text Styles :: General -->
    <style name="Text_Title_BottomFragmentDialog" parent="@style/typography_h5">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:titleMarginTop">8dp</item>
    </style>
    
    <!-- Text Styles :: Lifestyle Item List  -->
    <style name="LifeStyleItemList_Title" parent="@style/typography_h6">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="LifeStyleItemList_Category" parent="@style/typography_subtitle_2">
        <item name="android:textColor">@color/colorTextAlternate</item>
    </style>
    
    <style name="LifeStyleItemList_DateAdded" parent="@style/typography_caption">
        <item name="android:textColor">@color/colorTextAlternateLight</item>
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="LifeStyleItemList_DaysOld" parent="@style/typography_caption">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="LifeStyleItemList_TotalPrice" parent="@style/typography_caption">
        <item name="android:textColor">@color/colorTextAlternateLight</item>
    </style>
    
    <style name="LifeStyleItemList_Price" parent="@style/typography_body_2">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="LifeStyleItemList_Quantity" parent="@style/typography_body_1">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    
    <!-- Text Styles :: General Titles & Subtitles -->
    <style name="Centered_Subtitle_Overline_Default" parent="@style/typography_overline">
        <item name="android:textColor">@color/black_800</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Screen_Title_Default" parent="@style/typography_h5">
        <item name="android:textColor">@color/black_800</item>
    </style>
    
    <style name="EmptyView_Text_LifestyleList" parent="typography_h6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextAlternate</item>
    </style>
    
    
    
    <!--
        Custom Themes
    -->
    
    <!-- Bottom Sheet Dialog -->
    <!-- Set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/custom_rounded_dialog</item>
    </style>
    
    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">@bool/Windows_IsFloating</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
    
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog"/>
    
    
    <!-- Chips Customization -->
    <style name="Chips_Choice_Default" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="checkedIcon">@drawable/ic_done_light</item>
        <item name="checkedIconEnabled">true</item>
        <item name="checkedIconVisible">true</item>
        <item name="android:textColor">@color/custom_chips_text_states</item>
        <item name="chipBackgroundColor">@color/custom_chips_background_states</item>
    </style>
    
    <style name="Chips_Filter_Default" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="checkedIcon">@drawable/ic_done_light</item>
        <item name="checkedIconEnabled">true</item>
        <item name="checkedIconVisible">true</item>
        <item name="android:textColor">@color/custom_chips_text_states</item>
        <item name="chipBackgroundColor">@color/custom_chips_background_states</item>
    </style>
    
    <!-- Other Views Styles -->
    <style name="EmptyView_Image_LifestyleList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>
